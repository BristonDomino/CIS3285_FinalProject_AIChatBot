<Window x:Class="CIS3285_FinalProject_AIChatBot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AI Chatbot" Height="450" Width="800">
    <Grid>
        <!-- RichTextBox for Chat -->
        <RichTextBox Name="ChatDisplay" 
                     Margin="10,10,10,60" 
                     IsReadOnly="True" />

        <!-- TextBox for User Input -->
        <TextBox Name="userInputTextBox" 
                 KeyDown="userInputTextBox_KeyDown"
                 Height="25" 
                 Margin="10,0,100,10" 
                 VerticalAlignment="Bottom" 
                 HorizontalAlignment="Stretch" />
        


        <!-- Button to Send Message -->
        <Button Name="SendButton" 
                Content="Send" 
                Width="80" 
                Height="25" 
                VerticalAlignment="Bottom" 
                HorizontalAlignment="Right" 
                Margin="0,0,10,10"
                Click="SendButton_Click" />
    </Grid>
</Window>
